{% extends 'base.html.twig' %}

{% block title %}Edit verb
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	{{ form_start(form) }}
	<div class="my-custom-class-for-errors">
		{{ form_errors(form) }}
	</div>

	<div class="row">
		<div class="form-control">
			{{ form_label(form.title) }}
			{{ form_widget(form.title) }}
			<small>{{ form_help(form.title) }}</small>
			<div class="form-error">
				{{ form_errors(form.title) }}
			</div>
		</div>
	</div>
	
	<div class="row">
		<div class="form-control">
			{{ form_label(form.translation) }}
			{{ form_widget(form.translation) }}
			<small>{{ form_help(form.translation) }}</small>
			<div class="form-error">
				{{ form_errors(form.translation) }}
			</div>
		</div>
	</div>
	<div class="row">
		<labeL>
			{{ form_widget(form.isRegular, {'attr': {'class': 'filled-in'}}) }}
			<span>is regular</span>
		</label>
		<small>{{ form_help(form.isRegular) }}</small>
		<div class="form-error">
			{{ form_errors(form.isRegular) }}
		</div>
	</div>

	<button class="btn waves-effect waves-light" type="submit" name="action">Save
		<i class="material-icons right">send</i>
	</button>
	{{ form_end(form) }}

</div>{% endblock %}
